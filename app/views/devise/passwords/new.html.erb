<h2 class="pt-2" style="text-align:center;">Forgot your password?</h2>
<div class="d-flex justify-content-center align-items-center pt-3 ms-5">

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="actions mt-2">
    <%= f.submit "Send me reset password instructions", class:"btn btn-info forgot_pass"%>
    <%= render "devise/shared/links" %>
  </div>
<% end %>
</div>
